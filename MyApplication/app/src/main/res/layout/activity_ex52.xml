<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ex52Activity">
    <TableRow >
        <EditText
            android:id="@+id/et1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="5"
            android:text=""
            />
    </TableRow>
    <TableRow>
        <EditText
            android:id="@+id/et2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="5"
            android:text=""
            />
    </TableRow>
    <TableRow>
        <Button android:id="@+id/bt0" android:text="0" android:onClick="appendNumToText" />
        <Button android:id="@+id/bt1" android:text="1" android:onClick="appendNumToText"/>
        <Button android:id="@+id/bt2" android:text="2" android:onClick="appendNumToText"/>
        <Button android:id="@+id/bt3" android:text="3" android:onClick="appendNumToText"/>
        <Button android:id="@+id/bt4" android:text="4" android:onClick="appendNumToText"/>
    </TableRow>
    <TableRow>
        <Button android:id="@+id/bt5" android:text="5" android:onClick="appendNumToText"/>
        <Button android:id="@+id/bt6" android:text="6" android:onClick="appendNumToText"/>
        <Button android:id="@+id/bt7" android:text="7" android:onClick="appendNumToText"/>
        <Button android:id="@+id/bt8" android:text="8" android:onClick="appendNumToText"/>
        <Button android:id="@+id/bt9" android:text="9" android:onClick="appendNumToText"/>
    </TableRow>
    <TableRow >
        <Button android:layout_span="5"
            android:id="@+id/bt_plus"
            android:text="더하기" android:onClick="resultNumToText" />
    </TableRow>
    <TableRow>
        <Button android:layout_span="5"
            android:id="@+id/bt_minus"
            android:text="빼기" android:onClick="resultNumToText"/>
    </TableRow>
    <TableRow>
        <Button android:layout_span="5"
            android:id="@+id/bt_multi"
            android:text="곱하기" android:onClick="resultNumToText"/>
    </TableRow>
    <TableRow>
        <Button android:layout_span="5"
            android:id="@+id/bt_div"
            android:text="나누기" android:onClick="resultNumToText"/>
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/textResult"
            android:text="계산 결과: "
            android:textColor="#ff0000"
            android:textSize="20sp"
            android:layout_span="5"/>
    </TableRow>
    <TableRow></TableRow>

</TableLayout>